        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroPlaca)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo.Marca.NomMarca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo.NomModelo)
                </td>
