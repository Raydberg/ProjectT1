@model IEnumerable<ProjectT1.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroPlaca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo.Marca.NomMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo.NomModelo)
            </th>
